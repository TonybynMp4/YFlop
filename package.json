{
  "name": "node_project",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "build:client": "npm run build --prefix ./client",
    "start": "node server.js",
    "dev:server": "nodemon server.js",
    "dev:client": "npm run dev --prefix ./client",
    "prestart": "npm run build:client",
    "predev": "npm run i",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "bypass:dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "i:server": "rm -rf node_modules package-lock.json && npm install",
    "i:client": "rm -rf ./client/node_modules ./client/package-lock.json && npm install --prefix ./client",
    "i": "npm run i:server && npm run i:client"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "description": "",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "concurrently": "^9.1.2",
    "connect-history-api-fallback": "^2.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.12.0",
    "serverless-http": "^3.2.0",
    "uploadthing": "^7.6.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.9"
  }
}
